# Save exact versions of dependencies
save-exact=true

# Use strict SSL
strict-ssl=true

# Set npm registry
registry=https://registry.npmjs.org/

# Cache settings
cache-min=3600
cache-max=9999999

# Log level
loglevel=warn

# Color output
color=true

# Package lock settings
package-lock=true
save-prefix=""

# Security settings
audit=true
fund=false

# Performance settings
maxsockets=50
network-timeout=100000

# Git settings
git-checks=true

# Script settings
ignore-scripts=false

# Resolution settings
legacy-peer-deps=false
peer-dependency-check=true

# Package settings
save-prefix=""
save-dev-prefix=""
save-optional-prefix=""

# Cache settings
cache-min=3600
cache-max=9999999
cache-lock-stale=60000
cache-lock-retries=10
cache-lock-wait=10000

# Network settings
fetch-retries=3
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Progress settings
progress=true
progress-bar=true

# Update settings
update-notifier=true
update-notifier-interval=3600000 